mixin _footer(inp_arr)
    footer(class='rounded-lg shadow m-4 bg-gray-900')
      div(class='w-full max-w-screen-xl mx-auto p-4 md:py-8')
        div(class='sm:flex sm:items-center sm:justify-between')
          a(class='flex items-center mb-4 space-x-3 sm:mb-0 rtl:space-x-reverse' href='/')
            //- img.h-8(src='https://flowbite.com/docs/images/logo.svg' alt='Flowbite Logo')
            span(class='self-center text-2xl font-semibold whitespace-nowrap text-white') X-site
          ul(class='flex flex-wrap items-center mb-6 text-sm font-medium sm:mb-0 text-gray-400')
            each val in inp_arr
                li
                  a(class='mx-2 hover:underline md:mx-3' href=val.url)= val.text
        hr(class='my-6 sm:mx-auto border-gray-700 lg:my-8')
        span(class='block text-sm sm:text-center text-gray-400') &copy; 2024 X-site&trade; . All Rights Reserved.
