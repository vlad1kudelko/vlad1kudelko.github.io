---
import BaseHead from '../../components/BaseHead.astro';
import Footer   from '../../components/Footer.astro';
import Header   from '../../components/Header.astro';

import { AUTHOR_NAME } from '../../consts';

import { Image } from 'astro:assets';

import { getCollection, render } from 'astro:content';
const post = Astro.props;
const { Content } = await render(post);

const json_ld = [{
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": Astro.site },
        { "@type": "ListItem", "position": 2, "name": post.data.title }
    ]
},{
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.data.title,
    "image": [ post.data.heroImage.src ],
    "datePublished": post.data.pubDate.toISOString(),
    "author": [{
        "@type": "Person",
        "name": AUTHOR_NAME,
        "url": Astro.site
    }]
}];

export async function getStaticPaths() {
    const posts = await getCollection('posts');
    if (posts.length > 5) {
        for (let key_current in posts) {
            key_current = Number(key_current);
            const other_keys = [];
            other_keys.push(key_current - 2 >= 0           ? key_current - 2 : posts.length + key_current - 2);
            other_keys.push(key_current - 1 >= 0           ? key_current - 1 : posts.length + key_current - 1);
            other_keys.push(key_current + 1 < posts.length ? key_current + 1 : key_current - posts.length + 1);
            other_keys.push(key_current + 2 < posts.length ? key_current + 2 : key_current - posts.length + 2);
            posts[key_current].other_pages = [];
            for (const other_key of other_keys) {
                posts[key_current].other_pages.push({
                    title: posts[other_key].data.title,
                    url:   '/posts/' + posts[other_key].id + '/',
                    img:   posts[other_key].data.heroImage.src,
                });
            }
        }
    }
    return posts.map((post) => ({
        params: { slug: post.id },
        props: post,
    }));
}
---

<!doctype html>
<html lang="ru">
	<head>
		<BaseHead title={post.data.title} description={post.data.description} />
        <script type="application/ld+json" set:html={JSON.stringify(json_ld)} />
        <meta property="og:image" content={post.data.heroImage.src} />
    </head>
	<body class="bg-gray-800 text-gray-100">
		<Header />
        <main>
            <div class='mx-auto max-w-3xl bg-gray-300'>
                <!-- post -->
                <Image class='bg-gray-100' loading='lazy' width={800} height={400} src={post.data.heroImage} alt={post.data.title} />

                <div class="p-5">
                    <div class='text-xs text-gray-500 font-bold'>{post.data.pubDate.toDateString()}</div>
                    <div class="prose max-w-none marker:text-gray-900">
                         <Content />
                    </div>
                </div>

                {post.data.github && (
                    <div class='p-5'>
                        <a class='block p-5 bg-gray-800 text-gray-100 flex items-center' rel='nofollow' href={post.data.github}>
                            <img class='size-10' src='/res/github.webp' alt='github' />
                            <div class='ml-5 font-bold text-lg'>{post.data.github}</div>
                        </a>
                    </div>
                )}

                <div class='p-5 text-gray-900'>
                    <h2 class='text-2xl text-center font-bold mb-8'>Читайте также</h2>
                    <div class='grid grid-cols-2 gap-4 text-center'>
                        { post.other_pages.map((other_page) => (
                            <div>
                                <a href={other_page.url}>
                                    <img class='bg-gray-100' loading='lazy' width='800' height='400' src={other_page.img} alt={other_page.title} />
                                    <div>{other_page.title}</div>
                                </a>
                            </div>
                        )) }
                    </div>
                </div>

                <div class='p-5 pt-0'>
                    <a target='_blank' rel='nofollow' href='/go/timeweb-cloud'>
                        <img loading='lazy' src='/res/timeweb.webp' alt='timeweb-cloud' />
                    </a>
                </div>
                <!-- post -->
            </div>
        </main>
		<Footer />
	</body>
</html>
